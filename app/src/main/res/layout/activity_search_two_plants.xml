<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#18D596"
    tools:context=".SearchTwoPlants">
    <TextView
        android:id="@+id/search"
        android:layout_width="110dp"
        android:layout_height="39dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="82dp"
        android:text="Search"
        android:textAppearance="@style/header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <!-- Search Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="163dp">
        <View
            android:id="@+id/rectangle_2"
            android:layout_width="300dp"
            android:layout_height="29dp"
            android:background="@drawable/search_rectangle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </View>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/search_icon_foreground"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toStartOf="@id/rectangle_2"
            app:layout_constraintTop_toTopOf="@id/rectangle_2"
            app:layout_constraintBottom_toBottomOf="@id/rectangle_2"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/filter_icon_foreground"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="@id/rectangle_2"
            app:layout_constraintTop_toTopOf="@id/rectangle_2"
            app:layout_constraintBottom_toBottomOf="@id/rectangle_2"/>



        <TextView
            android:id="@+id/search_resu"
            android:layout_width="90dp"
            android:layout_height="13dp"
            app:layout_constraintStart_toStartOf="@id/rectangle_2"
            app:layout_constraintTop_toBottomOf="@id/rectangle_2"
            android:layout_marginTop="5dp"
            android:text="Search Results: 2"
            android:textAppearance="@style/search_resu"
            android:gravity="top"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- Tomato View -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tomato_plants_View"
        android:layout_width="338dp"
        android:layout_height="123dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="256dp"
        android:background="@drawable/plants_rectangle">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/add_tomato_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/tomato_plants_View"
            app:layout_constraintTop_toTopOf="@id/tomato_plants_View"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp">
            <View
                android:id="@+id/add_tomato_view"
                android:layout_width="101dp"
                android:layout_height="34dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/button_vektor"
                />
            <TextView
                android:id="@+id/add_tomato_text"
                android:layout_width="90.9dp"
                android:layout_height="22dp"
                app:layout_constraintStart_toStartOf="@id/add_tomato_view"
                app:layout_constraintTop_toTopOf="@id/add_tomato_view"
                app:layout_constraintEnd_toEndOf="@id/add_tomato_view"
                app:layout_constraintBottom_toBottomOf="@id/add_tomato_view"
                android:text="Add Plant"
                android:textAppearance="@style/plant_button_text"
                android:gravity="center_horizontal|top"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/info_tomato_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/tomato_plants_View"
            app:layout_constraintBottom_toBottomOf="@id/tomato_plants_View"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp">
            <View
                android:id="@+id/info_tomato_view"
                android:layout_width="101dp"
                android:layout_height="34dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/button_vektor"
                />
            <TextView
                android:id="@+id/info_tomato_text"
                android:layout_width="90.9dp"
                android:layout_height="22dp"
                app:layout_constraintStart_toStartOf="@id/info_tomato_view"
                app:layout_constraintTop_toTopOf="@id/info_tomato_view"
                app:layout_constraintEnd_toEndOf="@id/info_tomato_view"
                app:layout_constraintBottom_toBottomOf="@id/info_tomato_view"
                android:text="More Info"
                android:textAppearance="@style/plant_button_text"
                android:gravity="center_horizontal|top"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/san_marzano"
            android:layout_width="99dp"
            android:layout_height="18dp"
            android:layout_marginEnd="132dp"
            android:layout_marginTop="41dp"
            android:text="San Marzano"
            android:textAppearance="@style/san_marzano"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/solanum_lyc"
            android:layout_width="105dp"
            android:layout_height="12dp"
            android:text="Solanum lycopersicum"
            android:textAppearance="@style/solanum_lyc"
            app:layout_constraintStart_toStartOf="@id/san_marzano"
            app:layout_constraintTop_toBottomOf="@id/san_marzano"
            />
        <ImageView
            android:id="@+id/image"
            android:layout_width="87dp"
            android:layout_height="103dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/tomato_picture_small_icon_foreground" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- Cactus View -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cactus_plants_View"
        android:layout_width="338dp"
        android:layout_height="123dp"
        app:layout_constraintTop_toBottomOf="@id/tomato_plants_View"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/plants_rectangle">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/add_cactus_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/cactus_plants_View"
            app:layout_constraintTop_toTopOf="@id/cactus_plants_View"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp">
            <View
                android:id="@+id/add_cactus_view"
                android:layout_width="101dp"
                android:layout_height="34dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/button_vektor"
                />
            <TextView
                android:id="@+id/add_cactus_text"
                android:layout_width="90.9dp"
                android:layout_height="22dp"
                app:layout_constraintStart_toStartOf="@id/add_cactus_view"
                app:layout_constraintTop_toTopOf="@id/add_cactus_view"
                app:layout_constraintEnd_toEndOf="@id/add_cactus_view"
                app:layout_constraintBottom_toBottomOf="@id/add_cactus_view"
                android:text="Add Plant"
                android:textAppearance="@style/plant_button_text"
                android:gravity="center_horizontal|top"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/info_cactus_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/cactus_plants_View"
            app:layout_constraintBottom_toBottomOf="@id/cactus_plants_View"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp">
            <View
                android:id="@+id/info_cactus_view"
                android:layout_width="101dp"
                android:layout_height="34dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/button_vektor"
                />
            <TextView
                android:id="@+id/info_cactus_text"
                android:layout_width="90.9dp"
                android:layout_height="22dp"
                app:layout_constraintStart_toStartOf="@id/info_cactus_view"
                app:layout_constraintTop_toTopOf="@id/info_cactus_view"
                app:layout_constraintEnd_toEndOf="@id/info_cactus_view"
                app:layout_constraintBottom_toBottomOf="@id/info_cactus_view"
                android:text="More Info"
                android:textAppearance="@style/plant_button_text"
                android:gravity="center_horizontal|top"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/saguaro"
            android:layout_width="99dp"
            android:layout_height="18dp"
            android:layout_marginEnd="132dp"
            android:layout_marginTop="41dp"
            android:text="Saguaro"
            android:textAppearance="@style/san_marzano"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/carnegiea_gigantea"
            android:layout_width="105dp"
            android:layout_height="12dp"
            android:text="Carnegiea gigantea"
            android:textAppearance="@style/solanum_lyc"
            app:layout_constraintStart_toStartOf="@id/saguaro"
            app:layout_constraintTop_toBottomOf="@id/saguaro"
            />
        <ImageView
            android:id="@+id/image_cactus"
            android:layout_width="87dp"
            android:layout_height="103dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/cactuss_picture_small_icon_foreground" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- Navigation Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tabView"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/calendarView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/plantView">
            <ImageButton
                android:layout_width="32dp"
                android:layout_height="41.29dp"
                android:background="@drawable/calendar_icon_foreground"
                android:id="@+id/calendarTab"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/calendar_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calendar"
                android:textAppearance="@style/tab_text"
                app:layout_constraintTop_toBottomOf="@id/calendarTab"
                app:layout_constraintStart_toStartOf="@id/calendarTab"
                app:layout_constraintEnd_toEndOf="@id/calendarTab"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/plantView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <ImageButton
                android:layout_width="32dp"
                android:layout_height="38dp"
                android:background="@drawable/plant_icon_foreground"
                android:id="@+id/plantTab"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <TextView
                android:id="@+id/plants_text"
                android:layout_width="24dp"
                android:layout_height="10dp"
                android:text="Plants"
                android:textAppearance="@style/tab_text"
                app:layout_constraintTop_toBottomOf="@id/plantTab"
                app:layout_constraintStart_toStartOf="@id/plantTab"
                app:layout_constraintEnd_toEndOf="@id/plantTab"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchView"
            app:layout_constraintStart_toEndOf="@id/plantView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <ImageButton
                android:layout_width="35dp"
                android:layout_height="38dp"
                android:background="@drawable/search_icon_active_foreground"
                android:id="@+id/searchTab"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/search_text"
                android:layout_width="27dp"
                android:layout_height="10dp"
                android:text="Search"
                android:textAppearance="@style/tab_text"
                app:layout_constraintTop_toBottomOf="@id/searchTab"
                app:layout_constraintStart_toStartOf="@id/searchTab"
                app:layout_constraintEnd_toEndOf="@id/searchTab" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>