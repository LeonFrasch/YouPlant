<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#18D596"
    tools:context=".AddCactus">
    <TextView
        android:id="@+id/plant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="47dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="82dp"
        android:text="Saguaro"
        android:textAppearance="@style/header"
        />
    <TextView
        android:id="@+id/give_customname_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Give your plant a name"
        android:textAppearance="@style/text_style_info"
        android:layout_marginTop="180dp"
        android:layout_marginStart="47dp"
    />
    <ImageView
        android:id="@+id/customname_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/large_rectangle"
        app:layout_constraintStart_toStartOf="@id/give_customname_title"
        app:layout_constraintTop_toBottomOf="@id/give_customname_title"
        android:layout_marginTop="2dp"/>
    <TextView
        android:id="@+id/custom_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lara"
        android:layout_marginStart="30dp"
        android:textAppearance="@style/text_style_info"
        app:layout_constraintStart_toStartOf="@id/customname_view"
        app:layout_constraintTop_toTopOf="@id/customname_view"
        app:layout_constraintBottom_toBottomOf="@id/customname_view"/>

    <TextView
        android:id="@+id/give_plantdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="47dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="332dp"
        android:text="When did you plant it?"
        android:textAppearance="@style/text_style_info"
        />
    <ImageView
        android:id="@+id/plantdate_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/middle_rectangle"
        app:layout_constraintStart_toStartOf="@id/give_plantdate"
        app:layout_constraintTop_toBottomOf="@id/give_plantdate"
        android:layout_marginTop="2dp"/>
    <TextView
        android:id="@+id/plant_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="07.05.1999"
        android:textAppearance="@style/text_style_info"
        app:layout_constraintStart_toStartOf="@id/plantdate_view"
        app:layout_constraintTop_toTopOf="@id/plantdate_view"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@id/plantdate_view"/>
    <TextView
        android:id="@+id/give_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="47dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="481dp"
        android:text="Current height (cm)"
        android:textAppearance="@style/text_style_info"
        />
    <ImageView
        android:id="@+id/height_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/middle_rectangle"
        app:layout_constraintStart_toStartOf="@id/give_height"
        app:layout_constraintTop_toBottomOf="@id/give_height"
        android:layout_marginTop="2dp"/>
    <TextView
        android:id="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="357"
        android:textAppearance="@style/text_style_info"
        app:layout_constraintStart_toStartOf="@id/height_view"
        app:layout_constraintTop_toTopOf="@id/height_view"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@id/height_view"/>

    <TextView
        android:id="@+id/give_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="47dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="630dp"
        android:text="Where will it live (e.g. garden, kitchen)?"
        android:textAppearance="@style/text_style_info"
        />
    <ImageView
        android:id="@+id/location_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/large_rectangle"
        app:layout_constraintStart_toStartOf="@id/give_location"
        app:layout_constraintTop_toBottomOf="@id/give_location"
        android:layout_marginTop="2dp"/>
    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desert"
        android:textAppearance="@style/text_style_info"
        app:layout_constraintStart_toStartOf="@id/location_view"
        app:layout_constraintTop_toTopOf="@id/location_view"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@id/location_view"/>
    <ImageButton
        android:id="@+id/cancel_button"
        android:layout_width="110dp"
        android:layout_height="46dp"
        app:layout_constraintStart_toStartOf="@id/location_view"
        app:layout_constraintTop_toBottomOf="@id/location_view"
        app:layout_constraintBottom_toTopOf="@id/tabView"
        android:background="@drawable/button_small"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/cancel_button"
        app:layout_constraintEnd_toEndOf="@id/cancel_button"
        app:layout_constraintTop_toTopOf="@id/cancel_button"
        app:layout_constraintBottom_toBottomOf="@id/cancel_button"
        android:text="Cancel"
        android:textAppearance="@style/button_text"/>
    <ImageButton
        android:id="@+id/add_button"
        android:layout_width="110dp"
        android:layout_height="46dp"
        app:layout_constraintTop_toBottomOf="@id/location_view"
        app:layout_constraintBottom_toTopOf="@id/tabView"
        app:layout_constraintEnd_toEndOf="@id/location_view"
        android:background="@drawable/button_small"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/add_button"
        app:layout_constraintEnd_toEndOf="@id/add_button"
        app:layout_constraintTop_toTopOf="@id/add_button"
        app:layout_constraintBottom_toBottomOf="@id/add_button"
        android:text="Add"
        android:textAppearance="@style/button_text"/>
    <!-- Navigation Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tabView"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/calendarView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/plantView">
            <ImageButton
                android:layout_width="32dp"
                android:layout_height="41.29dp"
                android:background="@drawable/calendar_icon_foreground"
                android:id="@+id/calendarTab"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/calendar_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calendar"
                android:textAppearance="@style/tab_text"
                app:layout_constraintTop_toBottomOf="@id/calendarTab"
                app:layout_constraintStart_toStartOf="@id/calendarTab"
                app:layout_constraintEnd_toEndOf="@id/calendarTab"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/plantView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <ImageButton
                android:layout_width="32dp"
                android:layout_height="38dp"
                android:background="@drawable/plant_icon_foreground"
                android:id="@+id/plantTab"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <TextView
                android:id="@+id/plants_text"
                android:layout_width="24dp"
                android:layout_height="10dp"
                android:text="Plants"
                android:textAppearance="@style/tab_text"
                app:layout_constraintTop_toBottomOf="@id/plantTab"
                app:layout_constraintStart_toStartOf="@id/plantTab"
                app:layout_constraintEnd_toEndOf="@id/plantTab"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchView"
            app:layout_constraintStart_toEndOf="@id/plantView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <ImageButton
                android:layout_width="35dp"
                android:layout_height="38dp"
                android:background="@drawable/search_icon_active_foreground"
                android:id="@+id/searchTab"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/search_text"
                android:layout_width="27dp"
                android:layout_height="10dp"
                android:text="Search"
                android:textAppearance="@style/tab_text"
                app:layout_constraintTop_toBottomOf="@id/searchTab"
                app:layout_constraintStart_toStartOf="@id/searchTab"
                app:layout_constraintEnd_toEndOf="@id/searchTab" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>